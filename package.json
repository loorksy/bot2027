{
  "name": "whatsappdesktopbot",
  "version": "1.0.1",
  "description": "WhatsApp Desktop Bot (Electron + whatsapp-web.js)",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js"
  },
  "build": {
    "appId": "com.ahmad.whatsappbot",
    "productName": "WhatsApp Desktop Bot",
    "directories": {
      "output": "dist"
    },
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "bot.js",
      "renderer/**/*",
      "sessions/**/*",
      "node_modules/puppeteer/.local-chromium/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/puppeteer/.local-chromium",
        "to": "local-chromium"
      }
    ],
    "win": {
      "icon": "build/icon.png",
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "qrcode": "^1.5.4",
    "socket.io": "^4.7.5",
    "whatsapp-web.js": "^1.23.0",
    "puppeteer": "^21.3.8"
  }
}